{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "test build with g++.exe",
			"command": "C:\\msys64\\mingw64\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}\\*.cpp",
				"-o",
				"${workspaceFolder}\\test.exe",
				"-IE:\\programming\\SFML-2.5.1\\include\\",
				"-LE:\\programming\\SFML-2.5.1\\lib\\",				
				"-lsfml-graphics",
				"-lsfml-system",
				"-lsfml-window"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compile All"
		}
	]
}